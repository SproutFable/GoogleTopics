<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appWidgetBackgroundColor"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.GoogleTopics.AppWidgetContainer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/section_id"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        style="@style/AppWidgetSection"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/appwidget_id_label"
            android:layout_weight="2"
            android:text="@string/widget_id"
            style="@style/AppWidgetLabel"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/appwidget_id"
            android:layout_weight="1"
            android:text="@string/xx"
            style="@style/AppWidgetLabel"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/section_update"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:layout_above="@id/section_id"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        style="@style/AppWidgetSection"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/appwidget_update_label"
            android:layout_weight="2"
            android:text="@string/last_updated"
            style="@style/AppWidgetLabel"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/appwidget_update"
            android:layout_weight="1"
            android:text="@string/date_count_format"
            style="@style/AppWidgetText"
            />

    </LinearLayout>

</RelativeLayout>